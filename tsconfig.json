{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es2016", "es2016.array.include"],
    "sourceMap": true,
    "rootDir": "source",
    "baseUrl": "source",
    "allowJs": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strict": true
  },
  "exclude": [
    "source/danger/_tests/fixtures",
    "runner/*",
    "dangerfile_runtime_env",
    "node_modules",
    "out",
    "dangerfile.js",
    "wallaby.js",
    "migrations"
  ]
}

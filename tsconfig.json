{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "out",
    "lib": ["esnext"],
    "sourceMap": true,
    "rootDir": "source",
    "allowJs": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "pretty": true
  },
  "exclude": [
    "source/danger/_tests/fixtures",
    "runner/*",
    "dangerfile_runtime_env",
    "node_modules",
    "out",
    "dangerfile.lite.ts",
    "wallaby.js",
    "migrations"
  ]
}
